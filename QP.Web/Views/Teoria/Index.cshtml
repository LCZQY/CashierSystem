@model QP.Cashier_Model.CreateEntity.Staffs

@{
    ViewData["Title"] = "用户添加";
    Layout = "~/Views/Shared/_LayoutTeoria.cshtml";
}
<div class="row" style="padding:0;">
    <div class="col-md-4">
        <form asp-action="Index">
            <div class="form-group">
                <label asp-for="StaffName" class="control-label"></label>
                <input asp-for="StaffName" class="form-control input-sm" />
                <span asp-validation-for="StaffName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffSex" class="control-label"></label>
                <select asp-for="StaffSex" class="form-control input-sm">
                    <option value="0">男</option>
                    <option value="1">女</option>
                </select>
                <span asp-validation-for="StaffSex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffBirthType" class="control-label"></label>
                @*<input asp-for="StaffBirthType" class="form-control" />*@
                <select asp-for="StaffBirthType" class="form-control input-sm">
                    <option value="N">农历</option>
                    <option value="X">新历</option>
                </select>
                <span asp-validation-for="StaffBirthType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffBirth" class="control-label"></label>
                <input asp-for="StaffBirth" class="form-control input-sm" />
                <span asp-validation-for="StaffBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffIdentity" class="control-label"></label>
                <input asp-for="StaffIdentity" class="form-control input-sm" />
                <span asp-validation-for="StaffIdentity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffPhone" class="control-label"></label>
                <input asp-for="StaffPhone" class="form-control input-sm" />
                <span asp-validation-for="StaffPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobNumber" class="control-label"></label>
                <input asp-for="JobNumber" class="form-control input-sm" />
                <span asp-validation-for="JobNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control input-sm" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="AcrossTheStore" /> @Html.DisplayNameFor(model => model.AcrossTheStore)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="StaffDuty" class="control-label"></label>
                <input asp-for="StaffDuty" class="form-control input-sm" />
                <span asp-validation-for="StaffDuty" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <label asp-for="StaffEntryTime" class="control-label"></label>
                <input asp-for="StaffEntryTime" class="form-control input-sm" />
                <span asp-validation-for="StaffEntryTime" class="text-danger"></span>
            </div>
            <div class="form-group input-group-sm input-group">
                <label asp-for="ShopID" class="control-label"></label>                          
                @Html.DropDownList("ShopID", (SelectList)ViewData["SelectShop"] , "-- 请选择 --", new { @class = "form-control input-sm", @name= "ShopID" });
                <span asp-validation-for="ShopID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="确定添加" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
